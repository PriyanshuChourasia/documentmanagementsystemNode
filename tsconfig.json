{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true, /*Enable importing JSON files*/
        "paths": {
            "@modules/*":["modules/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}